{
  "name": "story-brew",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*", "cli"],
  "scripts": {
    "dev": "turbo dev",
    "format": "prettier --write .",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:app": "turbo run dev --filter=web --filter=server",
    "db:push": "turbo -F @story-brew/db db:push",
    "db:studio": "turbo -F @story-brew/db db:studio",
    "db:generate": "turbo -F @story-brew/db db:generate",
    "db:migrate": "turbo -F @story-brew/db db:migrate",
    "prepackage": "pnpm -F cli build",
    "package": "pnpm -F cli start"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.8.0"
}
